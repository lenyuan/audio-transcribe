{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs22.x",
      "includeFiles": "node_modules/@vercel/blob/**",
      "tsconfig": "tsconfig.api.json"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
